
import time
import board
from analogio import AnalogIn
from digitalio import DigitalInOut, Direction, Pull


analog_in = AnalogIn(board.A1)
GreenLed = DigitalInOut(board.D7)
RedLed = DigitalInOut(board.D6)
GreenLed.direction = Direction.OUTPUT
RedLed.direction = Direction.OUTPUT

THRESHOLD =  33800


def get_lightvalue(pin):
    return (pin.value )
    
def Digital_Out(value):
    if (value > THRESHOLD):
        return 1
    else:
        return 0

while True:
    #print((get_lightvalue(analog_in),))
    Light = get_lightvalue(analog_in)
    Threshold_value = Digital_Out(Light)
    #print (Threshold_value)
    if Threshold_value == 1:
        RedLed.value = True
        GreenLed.value  = False 
        
    else:
        GreenLed.value = True
        RedLed.value = False
        
    time.sleep(0.001)
    

    
